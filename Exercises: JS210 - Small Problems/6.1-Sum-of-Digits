// E - Examples/Test Cases:

console.log(sum(23));           // 5
console.log(sum(496));          // 19
console.log(sum(123456789));    // 45

// D - Data Structures: 
// - Input:
// - Output:
// - Intermediate:

// A - Algorithm:


// C - Implementation/Implementing (a solution in Code):

function sum(num) {
  return String(num).split('').reduce( (acc, val) => acc + Number(val), 0);
}